<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/status_bar_title">

    <!-- Heads up notifications -->
    <Preference
         android:key="heads_up_enabled"
         android:fragment="com.android.settings.flex.HeadsUpSettings"
         android:title="@string/category_heads_up" />

    <!-- Status bar -->
    <PreferenceScreen
        android:key="status_bar_settings"
        android:title="@string/status_bar_title"
        android:fragment="com.android.settings.cyanogenmod.StatusBarSettings"
        android:icon="@drawable/ic_settings_extdesk_hidenavbar" />

    <!-- Notification drawer -->
    <PreferenceScreen
        android:key="notification_drawer_settings"
        android:title="@string/notification_drawer_title"
        android:fragment="com.android.settings.cyanogenmod.NotificationDrawerSettings"
        android:icon="@drawable/ic_settings_notification_drawer" />

    <!-- Recent panel settings -->
    <PreferenceScreen
        android:key="recents_panel"
        android:fragment="com.android.settings.flex.RecentsPanelSettings"
        android:title="@string/recents_panel_title" 
        android:icon="@drawable/ic_settings_recents" />

    <!-- Screen and animations -->
    <PreferenceScreen
        android:key="screen_and_animations"
        android:fragment="com.android.settings.flex.ScreenAndAnimations"
        android:title="@string/screen_and_animations_title"
        android:icon="@drawable/ic_settings_anim" />

    <!-- App circle bar -->
    <PreferenceScreen
         android:key="app_circle_bar"
         android:fragment="com.android.settings.flex.AppCircleBar"
         android:title="@string/app_circle_bar_title"
         android:icon="@drawable/ic_circlebar_settings" />

</PreferenceScreen>
